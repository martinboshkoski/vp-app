                    <li><a href="/debt-clients">За наплата</a></li>
                <% }%>
                <% if(locals.isAdmin) {%>
                    <li class="adminA"><a href="/admin/admin-report">Админ панел</a></li>
                    <li><a href="/signup">Креирај агент</a></li>
                <% } %>
