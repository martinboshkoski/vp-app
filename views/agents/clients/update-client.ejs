                    <form id="nav-form" action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                        <button class="btn">Одјава</button>
                    </form>
                </li>
               <% }%>      
               <% if(!locals.isAuth) {%>
                <li><a href="/signup">Креирај агент</a></li>
                <li><a href="/login">Логирај се</a></li>
